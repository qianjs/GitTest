<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_above="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/top"></include>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- 轮播图片-->
                <com.clinical.tongxin.myview.SlideShowView
                    android:id="@+id/slideshowView"
                    android:layout_width="fill_parent"
                    android:layout_height="201dp"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="#2f2e2e"
                    android:text="项目名称"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="#737373"
                    android:text="项目名称"
                    android:textSize="13sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textSize="12sp"
                        android:textColor="#f5ad00"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1680.00"
                        android:textSize="20sp"
                        android:textColor="#f5ad00"/>
                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#737373"
                        android:text="/支（100单位）"
                        android:textSize="13sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d5d5d5"></View>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="#f2f2f2"></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服务城市"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textColor="#585656"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="费用说明"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tv_feeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购买3支以上，可享团购价1280/支"
                    android:textColor="#585656"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="特别提示"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预约过程如遇到困难，请联系客服,400-1235-456"
                    android:textColor="#585656"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d5d5d5"></View>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="#f2f2f2"></View>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xmxq03"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d5d5d5"></View>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="#f2f2f2"></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:textColor="#3d3d3d"
                    android:textSize="15sp"
                    android:text="服务详情"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d5d5d5"></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_margin="12dp"
                    android:text="注意：订单需要在支付后的3个月内使用，订单需要在支付后的3个月内使用，订单需要在支付后的3个月内使用，订单需要在支付后的3个月内使用，订单需要在支付后的3个月内使用，"
                    android:textColor="#ec2121"
                    android:textSize="12sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xmxq04"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#3588f0"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图文咨询"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500元"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffad00"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话咨询"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10元"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="下单"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="#3588f0"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>