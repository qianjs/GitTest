<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_task_classification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_all_status"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_all_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#85000000"
            android:text="全部状态"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_all_status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/icon_sacle_showall"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_all_classification"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_all_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="全部分类"
            android:textColor="#85000000"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_all_classification"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/icon_sacle_showall"/>

    </LinearLayout>
