<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/enterprise_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/enterprise_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="企业名称："/>
            <TextView
                android:id="@+id/enterprise_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="华为"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/industry_layout"
            android:layout_below="@id/enterprise_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/industry_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="行业名称："/>
            <TextView
                android:id="@+id/industry_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="计算机"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/job_type_layout"
            android:layout_below="@id/industry_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/job_type_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="职位类别："/>
            <TextView
                android:id="@+id/job_type_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="计算机"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/job_name_layout"
            android:layout_below="@id/job_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/job_name_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="职位名称："/>
            <TextView
                android:id="@+id/job_name_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="工程师"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/work_start_time_layout"
            android:layout_below="@id/job_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/work_start_time_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="开始时间："/>
            <TextView
                android:id="@+id/work_start_time_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="1900-11-11"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/work_end_time_layout"
            android:layout_below="@id/work_start_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/work_end_time_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="结束时间："/>
            <TextView
                android:id="@+id/work_end_time_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="1900-11-11"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/salary_layout"
            android:layout_below="@id/work_end_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/salary_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="职位月薪："/>
            <TextView
                android:id="@+id/salary_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:textColor="@color/black"
                android:text="1000-2000元/月"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/description_layout"
            android:layout_below="@id/salary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/description_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="工作描述："/>
            <TextView
                android:id="@+id/description_value_tv"
                android:layout_below="@id/description_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="1000-2000元/月"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/divider_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_dark"/>
</LinearLayout>