<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="47dp"
                android:onClick="back"
                android:layout_marginLeft="14dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/left_back"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找回密码"
                android:layout_centerInParent="true"
                android:textSize="19sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#85000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:text="找回密码"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#85000000"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/zhuce_01"/>
                <EditText
                    android:id="@+id/edtTxt_phone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:maxLength="11"
                    android:lines="1"
                    android:hint="输入您的手机号"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textColorHint="@color/gray"/>
            </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/shadow"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/yanzhengma"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="18dp">
                    <EditText
                        android:id="@+id/edtTxt_code"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:lines="1"
                        android:hint="输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="15sp"
                        android:background="@null"
                        android:textColorHint="@color/gray"/>

                    <Button
                        android:id="@+id/btn_getcode"
                        android:layout_width="88dp"
                        android:layout_height="33dp"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@drawable/btn_gray"
                        android:layout_marginRight="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/zhuce01"/>
                <EditText
                    android:id="@+id/edtTxt_RealName"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:maxLength="11"
                    android:hint="输入您的真实姓名"
                    android:textSize="15sp"
                    android:background="@drawable/edittext_xian"
                    android:textColorHint="@color/hint_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/zhuce02"/>
                <EditText
                    android:id="@+id/edtTxt_IDNumber"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:maxLength="11"
                    android:hint="输入您的身份证号"
                    android:textSize="15sp"
                    android:background="@drawable/edittext_xian"
                    android:textColorHint="@color/hint_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/mima"/>
                <EditText
                    android:id="@+id/edtTxt_pwd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:hint="登录密码"
                    android:lines="1"
                    android:maxLength="20"
                    android:password="true"
                    android:textSize="15sp"
                    android:digits="@string/rule_password"
                    android:textColorHint="@color/gray"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/shadow"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/zhuce_04"/>

                <EditText
                    android:id="@+id/edtTxt_pwd2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:lines="1"
                    android:hint="确认登录密码"
                    android:password="true"
                    android:textSize="15sp"
                    android:maxLength="20"
                    android:digits="@string/rule_password"
                    android:background="@null"
                    android:textColorHint="@color/gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/holo_red_light"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>