<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_OrderNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:text="交易号：01553153464646464"/>
    <TextView
        android:id="@+id/txt_orderType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:text="交易类型：01553153464646464"/>
    <TextView
        android:id="@+id/txt_OrderTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:text="交易时间：2016-07-09 18:00"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_in_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:text="收入：200"/>
        <TextView
            android:id="@+id/txt_payMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:text="支出：1200"/>
        <TextView
            android:id="@+id/txt_sum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:text="总额：10000"/>
    </LinearLayout>

</LinearLayout>