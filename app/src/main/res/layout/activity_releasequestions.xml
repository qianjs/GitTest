<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/top"/>
    <RelativeLayout
        android:id="@+id/rl_selecttype"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:hint="选择问题分类"
            android:paddingLeft="4dp"
            android:background="@drawable/textview_squarely"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wo09"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            />
    </RelativeLayout>
    <EditText
        android:id="@+id/edtTxt_title"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="4dp"
        android:background="@drawable/textview_squarely"
        android:hint="请输入问题"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/edtTxt_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingLeft="4dp"
        android:background="@drawable/textview_squarely"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:hint="请输入疑问具体内容"
        android:minLines="5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/jftj"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="请上传与疑问相关的资料"
            android:textSize="13sp"
            android:textColor="#333333"/>
    </LinearLayout>
    <com.clinical.tongxin.myview.MyGridView
        android:id="@+id/gv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:listSelector="@null"
        android:numColumns="auto_fit"
        android:columnWidth="100dp"
        android:gravity="center"
        android:scrollbars="none"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:stretchMode="columnWidth">

    </com.clinical.tongxin.myview.MyGridView>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_corner"/>
</LinearLayout>
