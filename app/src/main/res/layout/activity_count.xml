<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_t"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/txt_budget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="预算情况"
            android:textSize="13sp"
            android:textColor="#8a7272"
            android:gravity="center"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="#e1e1e2"/>
        <TextView
            android:id="@+id/txt_spend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="花费金额"
            android:textSize="13sp"
            android:textColor="#8a7272"
            android:gravity="center"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="#e1e1e2"/>
        <TextView
            android:id="@+id/txt_tasktype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="任务类型"
            android:textSize="13sp"
            android:textColor="#8a7272"
            android:gravity="center"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="#e1e1e2"/>
        <TextView
            android:id="@+id/txt_taskcount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="任务统计"
            android:textSize="13sp"
            android:textColor="#8a7272"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_cursor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e1e1e2"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.clinical.tongxin.myview.RadarMapView
            android:id="@+id/radarMap_View"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            />
        <lecho.lib.hellocharts.view.ComboLineColumnChartView
            android:id="@+id/comchartView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"/>

        <lecho.lib.hellocharts.view.LineChartView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/linechart"
            android:visibility="gone"/>
        <com.clinical.tongxin.myview.ColumnChartMyView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/columnchart"
            android:layout_marginRight="12dp"
            android:visibility="gone"/>
    </FrameLayout>


</LinearLayout>