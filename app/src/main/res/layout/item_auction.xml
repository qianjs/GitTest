<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文眉"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_myPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="我的报价 1000.00"
            android:textSize="14sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_residualTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#cc5222"
            android:gravity="right"
            android:text="剩余时间5小时"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_doctor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="发布医生  王医生"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="right">
            <Button
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_style1"
                android:textColor="@drawable/button_font_style"
                android:text="一口价"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e3"></View>
</LinearLayout>