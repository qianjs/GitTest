<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginLeft="14dp"
            android:onClick="back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/left_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="19sp" android:visibility="gone"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="18sp"
                android:text="用户注册"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/zhuce_01" />

                <EditText
                    android:id="@+id/edtTxt_phone"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入您的手机号"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:textColorHint="#85000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/yanzhengma" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtTxt_code"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入验证码"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="6"
                        android:textColorHint="#85000000"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_getcode"
                        android:layout_width="88dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/btn_gray"
                        android:text="获取验证码"
                        android:enabled="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/zhanghao" />

                <EditText
                    android:id="@+id/edtTxt_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入您的名称"
                    android:lines="1"
                    android:maxLength="20"
                    android:textColorHint="#85000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/mima" />

                <EditText
                    android:id="@+id/edtTxt_pwd"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/rule_password"
                    android:hint="登录密码"
                    android:lines="1"
                    android:maxLength="20"
                    android:password="true"
                    android:textColorHint="#85000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/zhuce_04" />

                <EditText
                    android:id="@+id/edtTxt_pwd2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/rule_password"
                    android:hint="确认登录密码"
                    android:lines="1"
                    android:maxLength="20"
                    android:password="true"
                    android:textColorHint="#85000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/zhuce_01" />

                <EditText
                    android:id="@+id/et_promotion_num"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入推广人手机号"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:textColorHint="#85000000"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/btn_verify_promotion"
                    android:layout_width="88dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/btn_gray"
                    android:text="验证推广人"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/zhanghao" />

                <TextView
                    android:id="@+id/tv_promotion_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLength="20"
                    android:gravity="center_vertical"
                    android:textColorHint="#85000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#85000000"
                />
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@color/holo_red_light"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>